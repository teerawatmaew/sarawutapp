								<tr>
									<td>10</td>
									<td><%= results[0].test10 %></td>
									<td><%= results[0].work10 %></td>
									<td><%= results[0].round10 %></td>
								</tr>
								<tr>
									<td colspan="2">
										<div class="button-group-area mt-40 text-right">
											<a href="#" class="genric-btn primary circle">ผลการเรียนก่อน</a> <%= results[0].pretest %> คะแนน
