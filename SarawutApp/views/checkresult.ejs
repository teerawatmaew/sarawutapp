									<td><%= results[0].test06 %></td>
									<td><%= results[0].work06 %></td>
									<td><%= results[0].round06 %></td>
								</tr>
								<tr>
									<td>7</td>
									<td><%= results[0].test07 %></td>
									<td><%= results[0].work07 %></td>
									<td><%= results[0].round07 %></td>
